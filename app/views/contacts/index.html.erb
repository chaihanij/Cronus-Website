<section class="container">
    <div class="center">
        <h2>Contacts</h2>
        <!-- <p class="lead">Prodcut in system platform development team.</p> -->
    </div>
    <div class="blog">
        <div class="row">
            <div class="col-md-9">
              <div class="panel panel-default">
                <div class="table-responsive">
                  <table class="table table-striped pretty">
                    <thead>
                      <tr>
                        <th>No.</th>
                        <th><%= sortable "subject" %></th>
                        <th>Message</th>
                        <th><%= sortable "created_at", "Time create" %></th>
                        <th><%= sortable "email" %></th>
                        <th></th>
                      </tr>
                    </thead>                
                    <tbody>
                      <% @contacts.each_with_index do |contact,index| %>
                        <tr>
                          <td><%= index+1 %></td>
                          <td><%= contact.subject %></td>
                          <td><%= contact.message %>
                            <%= truncate(contact.message , length: 50) { link_to "more", contact } %>
                          </td>
                          <td><%= contact.created_at.to_formatted_s(:db)  %></td>
                          <td><%= contact.email %></td>
                          <td align="center">
                              <%= link_to contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %>
                                  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                              <% end %> 
                              <%= link_to contact, class: "btn btn-success btn-xs"  do %>
                                  <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> View
                              <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="text-center">
                <%= paginate @contacts %>
              </div>
            </div>
            <div class="col-md-3">
                <div class="widget search">
                  <%= form_tag contacts_path, :method => 'get' do %>
                        <div class="form-group">
                            <%= text_field_tag :search, params[:search] , class: "form-control search_box", id:"search", placeholder: "Search"%>    
                         </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>