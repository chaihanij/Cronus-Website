<section id="blog" class="container">
    <div class="center">
        <h2><%= @contact.subject %></h2>
        <label>
            Name&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;<%= @contact.name %>&nbsp;&nbsp;&nbsp;
        </label>

        <label>
           E-Mail&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;<%= mail_to @contact.email %>&nbsp;&nbsp;&nbsp;
        </label><br>
        <label>Phone&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;<%= @contact.phone %>&nbsp;&nbsp;&nbsp;</label>
        <label>Company&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;<%= @contact.company %>&nbsp;&nbsp;&nbsp;</label>
    </div> 
    <div class="blog">
        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal well">
                    <div class="form-group">
                        <div class="col-sm-2"><b>Message:</b></div>
                        <div class="col-sm-10" ><p><%= @contact.message %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>