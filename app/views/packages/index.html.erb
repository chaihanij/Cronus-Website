<section id="blog" class="container">
    <div class="center">
        <h2>Manege <b><%= @product.name %></b> packages</h2>
        <p class="lead">Manege <code><%= @product.name %></code> packages in system platform development team.</p>
    </div>
    <div class="blog">
        <div class="row">
            <div class="col-md-9">
                <%= render 'package' %>
            </div>
            <div class="col-md-3">
                <%= form_tag product_packages_path, :method => 'get' do %>
                    <div class="form-group">
                        <%= text_field_tag :search, params[:search] , class: "form-control search_box", id:"search", placeholder: "Search"%>    
                     </div>
                <% end %>
                <div class="widget search">
                    <%= link_to "New Package",  new_product_package_path, class: "btn btn-primary btn-block" %>
                </div>
                
            </div>
        </div>
    </div>
</section>
