<header id="header" >
    <nav class="navbar navbar-inverse navbar-fixed-top" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to "Cronus", root_path, class: 'navbar-brand' %>
            </div>
            <div class="collapse navbar-collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li class="<%= is_active?('/') %>">
                        <%= link_to "Home", root_path %>
                    </li>
                    <li class="<%= is_active?('/download') %>">
                        <%= link_to "Download", download_path %>
                    </li>
                    <li class="<%= is_active?('/contact-us') %>">
                        <%= link_to "Contact", contact_us_path %>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            <strong>Other</strong>&nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <%= link_to 'Announcement', static_announcement_path, :class => 'navbar-link' %>
                            </li>
                            <li>
                                <%= link_to 'Event', static_event_path, :class => 'navbar-link' %>
                            </li>
                            <li>
                                <%= link_to 'Wiki', static_wiki_path, :class => 'navbar-link' %>
                            </li>
                        </ul>
                    </li>
                    <% if can? :manage, @users %>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            <strong>Admin</strong>&nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <%= link_to 'Announcement', announcements_path, :class => 'navbar-link' %>
                            </li>
                            <li>
                                <%= link_to 'Event', events_path, :class => 'navbar-link' %>
                            </li>
                            <li>
                                <%= link_to 'Wiki', wikis_path, :class => 'navbar-link' %>
                            </li>
                            <li>
                                <%= link_to 'Contact', contacts_path, :class => 'navbar-link' %>
                            </li>
                            <li>
                                <%= link_to 'Member', users_path, :class => 'navbar-link' %>
                            </li>
                            <li class="dropdown-header">Download</li>
                            <li>
                                <%= link_to 'OS', operating_systems_path, :class => 'navbar-link' %>
                            </li>
                            <li>
                                <%= link_to 'Product', products_path, :class => 'navbar-link' %>
                            </li>
                            <li>
                                <%= link_to 'Package', packages_path, :class => 'navbar-link' %>
                            </li>
                        </ul>
                    </li>
                    <% end %>
                   <% if user_signed_in? %>
                    <li class="dropdown">                                    
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            &nbsp;<strong><%= current_user.email %></strong>&nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> 
                            </li>
                            <li>
                                <%= link_to "Sign out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                            </li>
                        </ul>
                    </li>
                    <% else %>
                    <li >
                        <%= link_to "Sign up", new_user_registration_path  %>|
                        <%= link_to "Login", new_user_session_path %>
                    </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </nav>
</header>