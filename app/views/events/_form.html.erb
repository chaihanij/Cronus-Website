<%= form_for(@event, html: {class: 'form-horizontal'}) do |f| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2> 
        <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %> 
    <%= f.hidden_field :email, value: current_user.email %>
    <div class="form-group">
        <%= f.label :title, class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :title, id: "name", autocomplete: "off", class: "form-control", required: "required"%>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :description, class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= f.text_area :description, id: "description", autocomplete: "off", class: "form-control",required: "required" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :start_date, class: "col-sm-2 control-label" %>
        <div class="col-sm-2">
          <%= f.date_field :start_date, id: "start_date", class: "form-control",required: "required" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :end_date, class: "col-sm-2 control-label" %>
        <div class="col-sm-2">
          <%= f.date_field :end_date, id: "end_date", class: "form-control",required: "required" %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Image</label>
      
        <div class="col-sm-8" >
          <%= f.file_field :image, id:"image" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :body, class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= f.text_area :body, id:"body", oninput:"this.editor.update()",:data => {:provide => "markdown"}, :row => "20" %>
        </div>
    </div>  
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
          <%= f.submit class:"btn btn-primary",required: "required" %>
      </div>
    </div>
<% end %>

<script type="text/javascript">
$(document).ready(function() {
    $('#body').summernote(
      {
          height:300,
          maximumImageFileSize: 1048576
      } 
    );
 });
</script>
