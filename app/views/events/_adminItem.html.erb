<div class="table-responsive">
	<table class="table">
		<thead>
			<tr>
				<th>No.</th>
				<th><%= sortable "title" %></th>
				<th>Description</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @events_admin.each_with_index do |event,index| %>
			<tr>
				<td><%= index+1 %></td>
  				<td><%= event.title %></td>
  				<td><%= event.description %>
  					<%= truncate(event.description , length: 80) { link_to "more", event } %></td>
  				<td align="center">
  					<%= link_to event, method: :delete, data: { confirm: 'Are you sure?' } do %>
	    				<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
	    			<% end %>
  				</td>
  				<td align="center">
  					<%= link_to edit_event_path(event) do %>
						<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
	   				<% end %>
  				</td>
  				<td align="center">
  					<%= link_to event  do %>
	   					<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
	   				<% end %>
  				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="text-center">
    <%= paginate @events_admin, :param_name => "admin_page" %>
</div>
