<%= form_for(@operating_system,html: {class: 'form-horizontal'}) do |f| %>
  <% if @operating_system.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@operating_system.errors.count, "error") %> prohibited this operating_system from being saved:</h2>

      <ul>
      <% @operating_system.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group has-warning">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, id: "name", autocomplete: "off", class: "form-control",required: "required" %>
      <i>(minimum is 2 characters) (maximum is 30 characters) </i>
    </div>
  </div>
  <div class="form-group has-warning">
    <%= f.label :version, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :version, id: "version", autocomplete: "off", class: "form-control",required: "required" %>
      <i>(maximum is 20 characters) </i>
    </div>
  </div>
  <div class="form-group has-warning">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-8">
      <%= f.text_area :description, id:"description", class: "form-control" %>
      <i>(maximum is 255 characters) </i>
    </div>
  </div> 
  <div class="form-group has-warning">
    <div class="col-sm-3 col-sm-offset-2">
      <div class="checkbox">
        <label>
          <%= f.check_box :is_public %><b>Public</b>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit class:"btn btn-primary btn-lg" %>
    </div>
  </div>  
<% end %>