<section id="blog" class="container">
    <div class="center">
      <h2><code><%= @package_file.package_file_name %></code></h2>
      <% if can? :manage, edit_product_package_path %>
        <%= link_to 'Edit', edit_product_version_package_file_path(@package_file.version.product, @package_file.version, @package_file),class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="control-label col-sm-2"><b>Product</b></label>
                    <div class="col-sm-8">
                        <label class="control-label">
                            <%= @package_file.product.name %>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2"><b>Version</b></label>
                    <div class="col-sm-8">
                        <label class="control-label">
                            <%= @package_file.version.name %>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">OS</label>
                    <div class="col-sm-8">
                        <% if (@package_file.operating_system != nil) then %>
                          <label class="control-label"> <%= @package_file.operating_system.name %>&nbsp;&nbsp;&nbsp;<%= @package_file.operating_system.version %> </label>
                        <% else %>
                           <label class="control-label">Othen operating system</label>
                        <% end %>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"><b>Size</b></label>
                    <div class="col-sm-8" >
                      <label class="control-label">
                        <%= @package_file.package_file_size %>
                      </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"><b>Checksum</b></label>
                    <div class="col-sm-8" >
                      <label class="control-label">
                        <%= @package_file.checksum %>
                      </label>
                    </div>
                </div>
                <div class="form-group">
                      <label class="col-sm-2 control-label"><b>Build date</b></label>
                      <div class="col-sm-8" >
                        <label class="control-label">
                             <%= @package_file.build_date %>
                        </label>
                      </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"><b>Release date</b></label>
                    <div class="col-sm-8" >
                      <label class="control-label">
                        <%= @package_file.release_date %>
                      </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"><b>Release note</b></label>
                    <div class="col-sm-8" >
                      <label class="control-label">
                        <%= link_to @package_file.version.release_note_file_name,@package_file.version.release_note.url() %>
                      </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"><b>Version status</b></label>
                    <div class="col-sm-8">
                    <% if  @package_file.version.release_version %>
                      <span class="label label-limegreen">Release</span>
                    <% end %>
                    <% if @package_file.version.emergency_version %>
                      <span class="label label-greenyellow">Emergency</span>
                    <% end %>
                    <% if @package_file.version.broken_version %>
                        <span class="label label-danger">Broken</span>
                    <% end %>
                </div>
                <div class="form-group"> 
                    <div class="col-sm-offset-2 col-sm-8">
                        <a href="<%= @package_file.package %>" class="btn btn-primary btn-blog" >Download</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>