<section id="blog" class="container">
    <div class="center">
        <h1><%= @announcement.title %></h1>
        <p class="lead"><%= @announcement.description %></p>
    </div>
    <div class="blog">
        <div class="row">
            <div class="col-md-8" >
                <div class="blog-item">
                    <%= image_tag @announcement.image.url(:medium), class: "img-responsive img-blog",width: "100%" %>
                    <div class="row">  
                        <div class="col-xs-12 col-sm-3 text-center">
                            <div class="entry-meta">
                                <span id="publish_date"><%= @announcement.updated_at.strftime("%B %d, %Y") %></span>
                                <span><i class="fa fa-user"></i> <a><%= @announcement.email %></a></span>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-9 blog-content">
                            <%= @announcement.body.html_safe %>
                            <!-- <div class="post-tags">
                                <strong>Tag:</strong>
                            </div> -->
                        </div>
                    </div>
                </div>
            </div>          
            <div class="col-md-4">
                <div class="widget search">
                    <% if can? :manage , edit_announcement_path %>
                        <%= link_to 'Edit', edit_announcement_path(@announcement),class: "btn btn-primary btn-block" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>