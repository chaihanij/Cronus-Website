<% @announcements.each_with_index do |announcement,index| %>
<div class="blog-item">
    <div class="row">
        <div class="col-xs-12 col-sm-3 text-center">
            <div class="entry-meta">
                <span id="publish_date"><%= announcement.updated_at.strftime("%B %d, %Y") %></span>
                <span><i class="fa fa-user"></i> <a><%= announcement.email %></a></span>
            </div>
        </div>
        <div class="col-xs-12 col-sm-9 blog-content">
            <a>
                <%= image_tag announcement.image.url(:medium), class: "img-responsive img-blog", width: "100%"  %>
            </a>
            <h2>
                <%= link_to announcement.title, announcement %>
            </h2>
            <h3>
                <%= announcement.description %><%= truncate(announcement.description , length: 255) { link_to "more", announcement } %>
            </h3>
            <div class="row">
                <div class="col-sm-2" align="center">
                     <%= button_to "Read More", announcement, method: :get, class: "btn btn-primary"  %>
                </div>
            </div>
        </div>
    </div>    
</div>
<% end %>
<div class="text-center">
    <%= paginate @announcements %>
</div>