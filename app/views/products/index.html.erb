<section class="container">
    <div class="center">
        <h2>Products</h2>
        <p class="lead">Prodcut in system platform development team.</p>
    </div>
    <div class="blog">
        <div class="row">
            <div class="col-md-8">
                <div id="role_admin">
                    <%= render 'adminItem' %>
                </div>
                <div id="role_user">
                    <%= render 'userItem'%>
                </div>
            </div>
            <div class="col-md-4">
                <div class="widget search">
                    <%= form_tag products_path, :method => 'get' do %>
                    <div class="form-group">
                        <%= text_field_tag :search, params[:search] , class: "form-control search_box", id:"search", placeholder: "Search"%>    
                     </div>
                    <% end %>
                    <form role="form">
                        <% if can? :manage, new_product_path %>
                            <div class="form-group">
                                <select id="view" class="form-control">
                                    <option id="1" value="0">user view</option>
                                    <option id="2" value="1">admin view</option>
                                </select>
                            </div>
                            <div class="form-group">
                              <%= link_to "New Product", new_product_path, class: "btn btn-primary btn-block" %>
                            </div>
                        <% end %>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    $('#role_admin').hide();
    $('#view').change(function() {
        var x = $("#view").val();
        if (x == 0) {
            $("#role_user").show();
            $('#role_admin').hide();
        } else if (x ==1 ) {
            $("#role_admin").show();
            $('#role_user').hide();
        };
    });
</script>