<section id="contact-info" class="container">
    <div class="center" style="padding-bottom: 30px;">                
        <h2>Manage the <code><%= @product.name %></code> product</h2>
        <p class="lead"><%= @product.description %></p>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h3 class="panel-title">Lasted version update</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Name</th>
                                         <th>Total Package</th>
                                        <th>Time update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @latest_update_version.each_with_index do |version, index| %>
                                    <tr>
                                        <td><%= index+1 %></td>
                                        <td><%= link_to version.name, [version.product, version] %></td>
                                        <td>
                                            <%= version.package_files.count%>
                                        </td>
                                        <td><%= version.updated_at.to_formatted_s(:db)  %></td>
                                    </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h3 class="panel-title">Lasted packages update</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Name</th>
                                        <th>Time update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @latest_update_packages.each_with_index do |package,index| %>
                                    <tr>
                                        <td><%= index+1 %></td>
                                        <td><%= link_to package.package_file_name, [package.product, package.version, package] %></td>
                                        <td><%= package.updated_at.to_formatted_s(:db)  %></td>
                                    </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                        <!-- <div class="panel-footer">
                            <div class="center">
                                <%= link_to "View all", product_packages_path(@product), class:"btn btn-primary" %>
                            </div>
                        </div> -->
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h3 class="panel-title">Lasted documents update</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Name</th>
                                        <th>Time update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @latest_update_documents.each_with_index do |document,index| %>
                                    <tr>
                                        <td><%= index+1 %></td>
                                        <td><%= link_to document.name, [document.product, document] %></td>
                                        <td><%= document.updated_at.to_formatted_s(:db)  %></td>
                                    </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                        <!-- <div class="panel-footer">
                            <div class="center">
                                <%= link_to "View all", product_documents_path(@product), class:"btn btn-primary" %>
                            </div>
                        </div> -->
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <ul class="list-group">
                <li class="list-group-item"><%= link_to "Manage Documents", product_documents_path(@product) %></li>
                <li class="list-group-item"><%= link_to "New Documents", new_product_document_path(@product) %></li>
                <li class="list-group-item"><%= link_to "Manage Version and packages", product_versions_path(@product) %></li>
                <li class="list-group-item"><%= link_to "New Version", new_product_version_path(@product) %></li>
                <li class="list-group-item"><%= link_to "Edit", edit_product_path(@product) %></li>
            </ul>
        </div>
    </div>
</section>
