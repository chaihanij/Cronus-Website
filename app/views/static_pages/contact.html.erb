<section id="contact-page">
    <div class="container">
        <div class="center">        
            <h2>Drop Your Message</h2>
            <p class="lead"></p>
        </div>
        <div class="row contact-wrap"> 
            <div class="status alert alert-success" style="display: none"></div>
            <%= form_for(@contact, html: { class: "contact-form", name: "contact-form",id: "main-contact-form" } ) do |f| %>
                <% if @contact.errors.any? %>
                    <div class="form-group" id="error_explanation">
                        <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>           

                        <ul>
                            <% @contact.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                <div class="col-sm-5 col-sm-offset-1">
                    <div class="form-group has-warning">
                        <label>Name *</label>
                        <%= f.text_field :name, class: "form-control", required: "required" %>
                        <!-- <input type="text" name="name" class="form-control" required="required"> -->
                    </div>
                    <div class="form-group has-warning">
                        <label>Email *</label>
                        <%= f.email_field :email, class: "form-control", required: "required"%>
                        
                        <!-- <input type="email" name="email" class="form-control" required="required"> -->
                    </div>
                    <div class="form-group has-warning">
                        <label>Phone</label>
                        <%= f.text_field :phone , class: "form-control" %>
                       <!--  -->
                    </div>
                    <div class="form-group has-warning">
                        <label>Company Name</label>
                        <%= f.text_field :company , class: "form-control" %>
                        <!-- <input type="text" class="form-control"> -->
                    </div>                        
                </div>
                <div class="col-sm-5">
                    <div class="form-group has-warning">
                        <label>Subject *</label>
                        <%= f.text_field :subject, class: "form-control", required: "required"%>
                        <!-- <input type="text" name="subject" class="form-control" required="required"> -->
                    </div>
                    <div class="form-group has-warning">
                        <label>Message *</label>
                        <%= f.text_area :message, class: "form-control", required: "required"%>
                       <!--  <textarea name="message" id="message" required="required" class="form-control" rows="8"></textarea> -->
                    </div>                        
                    <div class="form-group">
                        <%= f.submit "Submit Message", name: "submit",class: "btn btn-primary btn-lg",required: "required"%>
              <!--           <button type="submit" name="submit" class="btn btn-primary btn-lg" required="required">Submit Message</button> -->
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>
