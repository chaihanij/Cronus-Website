<section id="blog" class="container">
    <div class="center" style="padding-bottom: 30px;">
        <h2><%= @document.name %></p></h2>
       <p class="lead"><%= @document.description %></p>
    </div>
    <div class="blog">
        <div class="row">
            <div class="col-md-9">
                <% if (@document.document.url() && @document.document.url() != '')%>
                    <iframe src="/pdfjs/web/viewer.html?file=<%= absolute_attachment_url(@document.document) %>" style="border: 3" width="100%" height="600px" frameborder="1" scrolling="yes"></iframe>
                <% end %>
            </div>
            <aside class="col-md-3">    
                <div class="widget categories">
                    <h3>Recent <code><%= @product.name %></code> Document</h3>
                    <div class="row">
                        <div class="col-sm-12">
                            <ul class="blog_archieve">
                                <% @lasted_documents.each do |document|  %>
                                <li><%= link_to document.name, product_document_path(document.product, document)%></li>
                                <% end %>
                            </ul>
                        </div>
                     </div>                     
                </div>
                <div class="widget search">
                    <% if (@document.document.url() && @document.document.url() != '')%>
                        <%= link_to 'Download', @document.document.url(), class: "btn btn-primary btn-block" %>
                    <% end %>
                </div>
                <% if can? :manage , edit_product_document_path %>
                <div class="widget search">
                    <form role="form">
                        <%= link_to 'Edit', edit_product_document_path(@document.product, @document), class: "btn btn-primary btn-block" %>
                    </form>
                </div>
                <% end %>
            </aside>
        </div>
    </div>
</section>
<section id="bottom" >
    <div class="container wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="600ms" style="max-width: 1024px;">
        <div class="row">            <div class="col-md-3 col-sm-6">
                <div class="widget">
                    <h3>Announcements</h3>
                    <ul>
                    <% Announcement.limit_five.each do |announcement| %>
                        <li><%= link_to announcement.title , announcement %></li>   
                    <% end %>
                    </ul>
                </div>    
            </div>            <div class="col-md-3 col-sm-6">
                <div class="widget">
                    <h3>Events</h3>
                    <ul>
                        <% Event.limit_five.each do |event| %>
                        <li><%= link_to event.title , event %></li>
                        <% end %>
                    </ul>
                </div>    
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="widget">
                    <h3>Products</h3>
                    <ul>
                        <% Product.limit_five.each do |product| %>
                            <li><%= link_to product.name , product_download_path(product) %></li>
                        <% end %>
                    </ul>
                </div>    
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="widget">
                    <h3>Wikis</h3>
                    <ul>
                        <% Wiki.limit_five.each do |wiki| %>
                            <li><%= link_to wiki.title , wiki %></li>
                        <% end %>
                    </ul>
                </div>    
            </div>
        </div>
    </div>
</section>
<footer id="footer" class="midnight-blue">
    <div class="container" style="max-width: 1024px;">
        <div class="row">
            <div class="col-sm-6">
                &copy; 2015&nbsp;&nbsp;&nbsp;<%= link_to 'Cronus Team', root_path , :title => "Cronus Team @ AIS" %>.&nbsp;&nbsp;All Rights Reserved.
            </div>
            <div class="col-sm-6">
                <ul class="pull-right">
                    <li>
                        <%= link_to "Home", root_path %>
                    </li>
                    <li>
                        <%= link_to "Download", download_path %>
                    </li>
                    <li>
                        <%= link_to 'Announcements', announcements_path, :class => 'navbar-link' %>
                    </li>
                    <li>
                        <%= link_to 'Events', events_path, :class => 'navbar-link' %>                        
                    </li>
                    <li>
                        <%= link_to 'Wikis', wikis_path, :class => 'navbar-link' %>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer> 
